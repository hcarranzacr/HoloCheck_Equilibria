{
    "title": "prompts",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "Primary key, auto-increment"
        },
        "organization_id": {
            "type": "string",
            "format": "uuid",
            "description": "Foreign key to organizations, null for global prompts"
        },
        "target": {
            "type": "string",
            "enum": [
                "employee",
                "department",
                "organization"
            ],
            "description": "Target type for this prompt"
        },
        "prompt_text": {
            "type": "string",
            "description": "OpenAI prompt template"
        },
        "model_version": {
            "type": "string",
            "description": "OpenAI model version"
        },
        "active": {
            "type": "boolean",
            "description": "Whether this prompt is active"
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
        }
    },
    "required": [
        "id",
        "target",
        "prompt_text"
    ]
}